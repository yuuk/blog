{
  "name": "blog",
  "version": "1.0.0",
  "description": "yuuk's blog",
  "main": "index.js",
  "scripts": {
    "start": "nodemon app/index.js",
    "eslint": "eslint ./app/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuuk/blog.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "yuuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yuuk/blog/issues"
  },
  "homepage": "https://github.com/yuuk/blog#readme",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": false,
    "delay": "2500",
    "env": {
      "PORT": 80
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run eslint"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": false
        }
      ]
    }
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "husky": "^1.2.1",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "art-template": "^4.13.2",
    "dayjs": "^1.7.7",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-art-template": "^1.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.4",
    "sequelize": "^4.41.2"
  }
}